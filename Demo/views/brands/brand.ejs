    <!-- Page content -->
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-head-line">BRAND Forms</h1>
                    <h1 class="page-subhead-line">This is dummy text, you can replace it with your original text.</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            FORM BRAND
                        </div>
                        <div class="panel-body">
                            <form action="/api/brand" method="POST">
                                <div class="form-group">
                                    <label for="namebrand">Nhà xuất bản:</label>
                                    <input type="text" class="form-control" id="namebrand" name="namebrand" required placeholder="Nhập nhà xuất bản" />
                                </div>
                                <div class="form-group">
                                    <label for="description">Mô tả:</label>
                                    <textarea class="form-control" id="description" name="description" rows="3" required placeholder="Nhập mô tả"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="namecategory">Chọn loại sản phẩm:</label>
                                    <select class="form-control" id="namecategory" name="namecategory" required>
                                        <!-- Các danh mục sẽ được chèn vào ở đây -->
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category._id %>"><%= category.namecategory %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Thêm thương hiệu</button>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

