    <style>
        /* Đảm bảo các mục trong dropdown được xếp theo cột */
        .dropdown-item {
            display: block;
            padding: 10px 15px;
            color: #333;
            text-decoration: none; /* Loại bỏ gạch chân */
            transition: background-color 0.3s ease; /* Thêm hiệu ứng mượt mà cho hover */
        }

        /* Thêm hiệu ứng hover */
        .dropdown-item:hover {
            background-color: #f8f9fa;
        }
   /* Giữ cấu trúc ban đầu và thêm hiệu ứng nổi khi nhấn vào */
   .nav-link {
    font-size: 14px;
    color: #333;
    padding: 8px 15px;
    border-radius: 5px;
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
    position: relative; /* Thêm thuộc tính này để dễ dàng điều chỉnh vị trí */
}

/* Hiệu ứng hover cho các mục menu */
.nav-link:hover {
    background-color: #f8f9fa;
    color: #007bff;
    transform: scale(1.05);
}

/* Thêm hiệu ứng khi nhấn vào các mục menu */
.nav-link:active {
    background-color: #007bff; /* Màu nền khi nhấn */
    color: #ffffff; /* Màu chữ khi nhấn */
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Tạo hiệu ứng bóng đổ */
    transform: scale(0.98); /* Hiệu ứng thu nhỏ khi nhấn */
}

/* Hiệu ứng hover cho các mục dropdown */
.dropdown-item {
    font-size: 14px;
    padding: 8px 20px;
    color: #333;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

/* Hiệu ứng hover cho các mục dropdown */
.dropdown-item:hover {
    background-color: #007bff;
    color: #fff;
}

/* Hiệu ứng khi nhấn vào các mục dropdown */
.dropdown-item:active {
    background-color: #0056b3;
    color: #fff;
}
        /* Đảm bảo form chiếm hết chiều rộng */
        form {
            max-width: 100%;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Thêm bóng mờ cho form */
        }

        /* Cải thiện hiển thị các input, textarea */
        input[type="text"],
        input[type="number"],
        input[type="date"],
        input[type="email"],
        select,
        textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box; /* Đảm bảo padding không làm thay đổi chiều rộng */
        }

        /* Các button */
        button {
            width: 100%;
            padding: 12px;
            margin: 20px 0;
            background-color: #007bff; /* Màu xanh dương cho nút */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px; /* Kích thước chữ nút */
            transition: background-color 0.3s ease; /* Thêm hiệu ứng mượt mà cho hover */
        }

        /* Button hover */
        button:hover {
            background-color: #0056b3; /* Màu xanh đậm khi hover */
        }

        /* Tăng độ rộng của phần textarea */
        textarea {
            height: 150px;
        }

        /* Cải thiện giao diện của các mục trong dropdown */
        .dropdown-menu {
            max-height: 300px; /* Giới hạn chiều cao dropdown */
            overflow-y: auto; /* Thêm thanh cuộn nếu cần */
        }
    </style>
